@model myWeb_work.Models.LoginUser
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand">My Dream House</a>
            </div>
            <ul class="nav navbar-nav">
                
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "HomePage" ? "active" : "")"><a href="@Url.Action("HomePage", "HomePage",Model)"><span class="glyphicon glyphicon-home"></span> Home</a></li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "HouseSell" ? "active" : "")"><a href="@Url.Action("HouseSell","House")">Buy Home</a></li>
                <li><a href="@Url.Action("HouseCreate", "House")">Sell Home</a></li>
                <li><a href="#">About</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "MyProfile" ? "active" : "")"><a href="@Url.Action("MyProfile", "User",Model)"><span class="glyphicon glyphicon-user"></span> @Session["FullName"]</a></li>
                <li><a href="@Url.Action("Logout","User",Model)"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
            </ul>
        </div>
    </nav>
</body>
</html>
