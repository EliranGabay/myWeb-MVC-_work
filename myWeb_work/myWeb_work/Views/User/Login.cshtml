@model myWeb_work.Models.LoginUser
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>Login</h2>
        <form action="SubmitCon" method="post">
            <div class="form-group">
                <label for="ID">ID:</label>
                <input type="text" class="form-control" id="Id" placeholder="Enter ID" name="ID" value="@Model.ID" />@Html.ValidationMessageFor(x => x.ID)
            </div>
            <div class="form-group">
                <label for="Password">Password:</label>
                <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="Password">@Html.ValidationMessageFor(x => x.Password)
            </div>
            <div>@ViewBag.Error<p></p></div>
            <button type="submit" class="btn btn-default">Ok</button><button type="button" class="btn btn-default" onclick="history.go(-1);">Cancel</button>
        </form>
    </div>
</body>
</html>
