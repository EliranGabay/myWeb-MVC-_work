@model myWeb_work.Models.Bid

<form action="BidSend" method="post">
    <div class="form-group">
        <label for="Bid">Bid:</label>
        <input type="text" class="form-control" id="Bid" placeholder="Enter Bid" name="BidPrice" value="@Model.BidPrice" /><text style="color:#ff0000">@ViewBag.error</text>
    </div>
    <button type="submit" class="btn btn-default">Send Bid</button>
</form>