@model myWeb_work.Models.LoginUser
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <div> 
        <form action="SubmitCon" method="post">
            <table>
                <tr>
                    <td>ID:</td>
                    <td><input id="Text1" name="ID" type="text" value="@Model.ID" />@Html.ValidationMessageFor(x => x.ID)</td>
                </tr>
                <tr>
                    <td>Password:</td>
                    <td><input id="Password1" name="Password" type="password" />@Html.ValidationMessageFor(x => x.Password)</td>
                </tr>
                <tr>
                    <td>@ViewBag.Error</td>
                </tr>
                <tr>
                    <td><input id="Submit1" type="submit" value="Ok" /></td>
                    <td><input id="Button1" type="button" value="Cancel" onclick="history.go(-1);"/></td>
                </tr> 
            </table>
        </form>
    </div>
</body>
</html>
